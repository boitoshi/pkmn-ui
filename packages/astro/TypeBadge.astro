---
interface Props{
  type:
    | "normal"|"fire"|"water"|"electric"|"grass"|"ice"
    | "fighting"|"poison"|"ground"|"flying"|"psychic"
    | "bug"|"rock"|"ghost"|"dragon"|"dark"|"steel";
  label?: string;   // 表示文字（省略時は自動で大文字TYPE）
  class?: string;   // 追いCSS
}
const { type, label, class:klass } = Astro.props;
const fallback = (s:string)=>s.toUpperCase();
---
<span class={`type-badge ${type} ${klass??""}`}>{label ?? fallback(type)}</span>
